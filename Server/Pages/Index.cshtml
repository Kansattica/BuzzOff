@page "/"
@model BuzzOff.Server.Pages.IndexModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Buzz Off!</title>
    <link href="~/css/buzzoff.css" rel="stylesheet" />
    <script defer type="text/javascript" src="~/js/index.js"></script>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#603cba">
    <meta name="theme-color" content="#ffffff">
    <meta property="og:url" content="https://buzzoff.hypnovir.us">
    <meta property="og:site_name" content="Buzz Off!">
    <meta property="og:description" content="A tool for determining who buzzed in, raised their hand, or otherwise was first.">
    <meta property="og:image" content="https://buzzoff.hypnovir.us/android-chrome-512x512.png" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
</head>
<body class="center">
    <h2>Welcome to Buzz Off!</h2>
    <h3>A simple website for running quiz shows and anything else that needs to know who "buzzed in" first.</h3>

    <label for="roomname">Room name to create or join:</label><br />
    <input id="roomname" type="text" value="@Model.SuggestedName"/><br/>
    <label for="output">Click here to enter, then send the link to your friends:</label><br />
    <a id="output"></a><br />
    <p class="license">This software is available under the terms of the AGPL at <a href="https://github.com/Kansattica/BuzzOff">https://github.com/Kansattica/BuzzOff</a>.</p>
    <p>Copyright 2020 Grace Lovelace</p>
</body>
</html>