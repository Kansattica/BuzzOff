<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />*@
    <title>@ViewBag.Title</title>
    <link href="~/css/buzzoff.css" rel="stylesheet" />
    @if (ViewBag.IncludeBuzz)
    {
        <script src="~/js/dist/browser/signalr.min.js"></script>
        <script type="text/javascript">
            @(Html.Raw(ViewBag.InitialVars))
        </script>
        <script defer src="~/js/buzz.js?" type="text/javascript"></script>
    }
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#603cba">
    <meta name="theme-color" content="#ffffff">
    <meta property="og:image" content="https://buzzoff.hypnovir.us/android-chrome-512x512.png" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:url" content="https://buzzoff.hypnovir.us">
    <meta property="og:site_name" content="Buzz Off!">
    <meta property="og:description" content="A tool for determining who buzzed in, raised their hand, or otherwise was first.">
</head>

<body>
    <div class="main">
        <div class="content px-4">
            @RenderBody()
        </div>
    </div>
</body>

</html>
