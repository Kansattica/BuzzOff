<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />*@
    <title>@ViewBag.Title</title>
    <link href="~/buzzoff.css?" rel="stylesheet" />
    @if (ViewBag.IncludeBuzz)
    {
        <script src="~/js/dist/browser/signalr.min.js"></script>
        <script type="text/javascript">
            @(Html.Raw(ViewBag.InitialVars))
        </script>
        <script defer src="~/js/buzz.js" type="text/javascript"></script>
    }
</head>

<body>
    <div class="main">
        <div class="content px-4">
            @RenderBody()
        </div>
    </div>
</body>

</html>
